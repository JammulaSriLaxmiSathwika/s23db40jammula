extends layout

block content
  h1= title
  -
    var results = [
      { "type": "Necklace", "material": "Gold", "price": 2000 },
      { "type": "Ring", "material": "Diamond", "price": 4000 },
      { "type": "Chain", "material": "Platinum", "price": 1500 }
    ]

  style.
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      color: #343a40;
      margin: 0;
    }

    h1 {
      color: #007bff;
    }

    .container-fluid {
      padding: 20px;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .col-sm-2 {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
      margin-bottom: 15px;
      cursor: pointer;
      transition: box-shadow 0.3s;
    }

    .col-sm-2:hover {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

  .container-fluid
    .row
      each item, index in results
        .col-sm-4.mb-4
          div(class="col-sm-2", onclick=`buy(${index})`)
            | #{item.type}, #{item.material}, #{item.price}$
            - let destination = `dispatch(\"/costumes/update?id=${item._id}\")`
              div(class="row-sm-2", class="m-1") Item #{item.costume_type}(#{item.size}) is #{item.cost}
              button.btn( class="btn-primary ml-1", onclick= destination) Update
            script.
              function buy(a) {
                  alert(`You purchased Item ${a + 1}`);
              }
              function dispatch(path){
              window.location.href=path
              }